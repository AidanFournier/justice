<% content_for :current_page, 'log_out' %>

<%= render 'shared/new_banner', text: "Profile", class: "d-flex" %>
<div class="container mt-4">
  <div class="incident-card d-flex p-3">
    <div class= "incident-thumbnail" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2))">
      <img src=<%= @user.avatar %> alt="" style= "width:80px" >
    </div>
    <div class="incident-title-date mx-3 d-flex flex-column justify-content-around">
      <h2><%= @user.nickname %></h2>
      <p><%= @user.email %></p>
    </div>
  </div>
  <div id="welcome-btn">
    <button class="button-small-white box-shadow mt-5 w-100" id="bottom">
      <%= link_to "Log out", destroy_user_session_path, method: :delete %>
    </button>
  </div>
</div>
