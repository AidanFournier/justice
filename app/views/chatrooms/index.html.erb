<% content_for :current_page, 'chatrooms' %>

<%= render 'shared/new_banner', text: "Chats" %>

<%= render 'chat_card', chatrooms: @chatrooms %>

<% @chatrooms.each do |chatroom| %>
  <% if chatroom.pending? && chatroom.recipient == current_user %>
      <%= render 'request_form', chatroom: chatroom, class: "button-small box-shadow w-100", id: 'show-bottom' %>
  <% end %>
<% end %>





